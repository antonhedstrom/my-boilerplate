{
  "name": "my-boilerplate",
  "version": "0.1.0",
  "description": "A generice boilerplate with server + client.",
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "sequelize-cli": "^6.5.2"
  },
  "scripts": {
    "postinstall": "cd client && npm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "echo \"Building app...\" && npm run client:build && echo \"Build done.\" && npm run server",
    "server": "node server.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migration:new": "sequelize-cli migration:generate --name ",
    "client": "cd client && npm run start",
    "client:build": "cd client && npm run build",
    "dev": "concurrently --kill-others \"npm run server\" \"npm run client\""
  },
  "author": "Anton Hedstr√∂m",
  "license": "MIT"
}
